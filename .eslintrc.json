{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "sourceType": "module"
    },
    "rules": {
        "indent": [
            "error",
            4
        ],
        "linebreak-style": [
            "error",
            "windows"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ]
    },
    "globals": {
        "require": true,
        "module": true,
        "describe": true,
        "it": true,
        "xit": true,
        "beforeEach": true,
        "beforeAll": true,
        "expect": true,
        "inject": true,
        "spyOn": true,
        "jasmine": true
    }
    
}